#include <stdio.h>
#include <stdlib.h>

int main()
{
    int a,b,choice;
    printf("CALCULATOR by @SittieYAY!\n");
    printf("1.Addition\n2.Subtraction\n3.Multiplication\n4.Division\n");
    printf("Enter the number you want to proceed.\n");
    scanf("%d,",&choice);
    printf("A: ");
    scanf("%d", &a);
    printf("B: ");
    scanf("%d&",&b);

    switch (choice)
    {
    case 1:
        printf("%d + %d = %d ",a,b,a+b);
        break;

    case 2:
        printf("%d - %d = %d ",a,b,a-b);
        break;

    case 3:
        printf("%d x %d = %d ",a,b,a*b);
        break;

    case 4:
        printf("%d / %d = %d ",a,b,a/b);
        break;

 return 0;
}
    return 0;
}

